import time 


class CuentaBancaria:
    def __init__(self, saldo_inicial):
        self.__saldo = saldo_inicial

    def get_saldo(self):
        return self.__saldo

    def set_saldo(self, nuevo_saldo):
        if nuevo_saldo >= 1000000:
            
            self.__saldo = nuevo_saldo
        else:
            print("No tiene saldo suficiente para establecer ese valor.")

    def depositar(self, monto):
        if monto > 10000:
            self.__saldo += monto
        else:
            print("El monto es inv√°lido.")

    def retirar(self, monto):
        if monto <= self.__saldo:
            self.__saldo -= monto
        else:
            print("No tiene fondos suficientes.")


class Estudiante:
    def __init__(self, nota_alumno):
        self.__nota = nota_alumno

    def get_nota(self):
        return self.__nota

    def get_calificacion(self):
        alumno = input (" Ingresa el nombre del estudiante : ")
        try:
            nota = float(input("¬øCu√°l es la nota del estudiante?: "))
            self.__nota = nota  # actualizar la nota interna

            if nota < 3:
                print(f"La nota del estudiante {alumno} es demasiado baja.")
            elif 3 <= nota <= 4:
                print(f"La nota del estudiante {alumno} es regular.")
            elif 4.1 <= nota <= 5:
                print(f"La nota del estudiante {alumno} es excelente.")
            else:
                print("Nota fuera de rango.")
        except ValueError:
            print("Por favor, ingrese un n√∫mero v√°lido.")

class Persona :

    def __init__ ( self, nombre , edad):
        self.__edad= edad
        self.__name= nombre 
    def get_edad (self):
        return self.__edad
    def get_name (self):
        return self.__name 
    def get_datos ( self ):
        nombre = input ("Ingresa el nombre de la persona :").strip()
        self.__name=nombre 
        try:
            edad = int ( input(f" Ingresa la edad de {nombre }. : "))
            self.__edad= edad

            print (f" {nombre}, tiene una edad de {edad} a√±os.")
        except ValueError:
            print (" Porfavor ingesa una edad valida ")

class Paciente:
    def __init__(self, nombre, edad, historial):
        self.__nombre = nombre
        self.__edad = edad
        self.__historial = historial

    def get_nombre(self):
        return self.__nombre

    def get_mostrar_historial(self):
        print(f"\nPaciente: {self.__nombre}")
        print(f"Edad: {self.__edad}")
        print("Historial m√©dico:")
        for d in self.__historial:
            print(f"- {d}")





# Instancias de las clases 

cuenta = CuentaBancaria(1000000)
nota = Estudiante(5)
persona= Persona ("X", 2)
pacientes = [
    Paciente("Laura", 28, ["Resfriado", "Dolor de est√≥mago"]),
    Paciente("Pedro", 35, ["Migra√±a"]),
]


